{
  "compilerOptions": {
    "target": "es2017",                                 
    "module": "commonjs",                              
    // "rootDir": "./",                                  
    "moduleResolution": "node",                     
    "baseUrl": "./src",                                 
    "resolveJsonModule": true,                      
    "outDir": "./dist",                
    "esModuleInterop": true,                             
    // "preserveSymlinks": true,                       
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
    "skipLibCheck": true                              
  },
  "include": ["src"]
}
